@model IEnumerable<ResidentsDuesApp.Person>
@if (Model.Count() == 0)
{
    <div class="alert alert-dismissable alert-danger">
    <h4>Warning!</h4>
    <p>Tidak ada Penghuni dalam rumah ini</p>
    </div>
}
@{
    WebGrid grid = new WebGrid(Model,
        null,
        null,
        6,
        false,
        true,
        null,
        null,
        null,
        null,
        null,
        null,
        null);
    }
@grid.GetHtml(
tableStyle: "table table-hover",

columns : new[]{
    grid.Column("Name","Nama"),
    grid.Column("IDCard","KTP"),
    grid.Column("Age","Umur"),
    grid.Column("BirthDate","Tanggal Lahir"),
    grid.Column("",
        header : "Actions",
        format :@<text>
                    @Html.ActionLink("Details", "Details", new { id=item.PeopleID })
                </text>
        )
})

