@model CobaMVCberelasi.OrangTua
@using CobaMVCberelasi;
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<fieldset>
    <legend>OrangTua</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.OTName)
        =
        @Html.DisplayFor(model => model.OTName)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Age)
        = 
        @Html.DisplayFor(model => model.Age)
    </div>

    
    @if(ViewBag.dataanak != null)
    {
        <div class ="display-label">
        
        <h3> Data Anak </h3>
    </div>
    <table border ="1">
        <tr>
            <th>Nama</th>
            <th>Umur</th>
        </tr>
        @foreach(Anak item in ViewBag.dataanak)
        {
             <tr>
                 <td>
                     @Html.DisplayFor(modelItem => item.AnakName)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Age)
                 </td>
             </tr>
        }
    </table>
    }
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.OTId /* id=Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>
